{
    "name": "whitedigital-eu/entity-resource-mapper-bundle",
    "description": "Bundle to map Doctrine entity object to and from API resource object.",
    "type": "symfony-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Raitis Rasmanis",
            "email": "raitis.rasmanis@whitedigital.eu"
        },
        {
            "name": "Andis Cirulis",
            "email": "andis.cirulis@whitedigital.eu"
        },
        {
            "name": "Davis Zalitis",
            "email": "davis.zalitis@whitedigital.eu"
        }
    ],
    "autoload": {
        "psr-4": {
            "WhiteDigital\\EntityResourceMapper\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WhiteDigital\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.1",
        "api-platform/core": "^3.2",
        "doctrine/annotations": "*",
        "doctrine/collections": "*",
        "doctrine/common": "^3.4",
        "doctrine/dbal": "^3.7",
        "doctrine/orm": "^2.19",
        "doctrine/persistence": "^3.4||^4.0",
        "phpdocumentor/reflection-docblock": "*",
        "psr/log": "*",
        "symfony/config": "^6.4 || ^7.1",
        "symfony/console": "^6.4 || ^7.1",
        "symfony/dependency-injection": "^6.4 || ^7.1",
        "symfony/doctrine-bridge": "^6.4 || ^7.1",
        "symfony/framework-bundle": "^6.4 || ^7.1",
        "symfony/http-foundation": "^6.4 || ^7.1",
        "symfony/http-kernel": "^6.4 || ^7.1",
        "symfony/property-access": "^6.4 || ^7.1",
        "symfony/property-info": "^6.4 || ^7.1",
        "symfony/security-bundle": "^6.4 || ^7.1",
        "symfony/security-core": "^6.4 || ^7.1",
        "symfony/serializer": "^6.4 || ^7.1",
        "symfony/service-contracts": "^2.0 || ^3.5",
        "symfony/string": "^6.4 || ^7.1",
        "symfony/translation": "^6.4 || ^7.1",
        "symfony/validator": "^6.4 || ^7.1",
        "symfony/yaml": "^6.4 || ^7.1",
        "doctrine/doctrine-bundle": "^2.13",
        "symfony/uid": "^6.4 || ^7.1"
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest",
        "phpunit/phpunit": "^10.0",
        "whitedigital-eu/config-pack": "^2",
        "phpstan/phpstan": "^2.0",
        "symfony/maker-bundle": "^1.61"
    },
    "scripts": {
        "phpstan": "phpstan",
        "phpunit-base": "phpunit tests/",
        "phpunit": "@phpunit-base --testdox",
        "phpunit-coverage-text": "@phpunit-base --coverage-text --colors=never"
    },

    "extra": {
        "branch-alias": {
            "dev-main": "0.x-dev"
        }
    }
}
